# ============================================
# SALDAÃ‘A MUSIC API - Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/saldana_music
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password
DB_NAME=saldana_music

# ============================================
# AUTHENTICATION
# ============================================
# REQUIRED: Generate with: openssl rand -base64 64
JWT_SECRET=your_super_secret_jwt_key_min_32_chars

# Google OAuth 2.0 (Required for Google Login)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Master Admin Password (REQUIRED - use bcrypt hash in production)
MASTER_PASSWORD=your_secure_master_password

# ============================================
# EMAIL (SMTP)
# ============================================
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=info@yourdomain.com
SMTP_PASS=your_smtp_password

# ============================================
# AWS S3 (Optional - for file storage)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=saldana-music-files

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://app.saldanamusic.com
